{
  "name": "use-truncate",
  "version": "0.1.0",
  "description": "A react hook to truncate sentences, build in Typescript, supporting CJS and ESM. No dependencies.",
  "repository": {
    "type": "git",
    "url": "https://github.com/IzioDev/use-truncate.git"
  },
  "main": "./dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js"
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.esm.json & tsc --project tsconfig.cjs.json",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testEnvironment": "jsdom"
  },
  "keywords": [
    "react",
    "hook",
    "truncate",
    "sentence",
    "word",
    "typescript",
    "cjs",
    "esm"
  ],
  "author": "IzioDev",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0  || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0  || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-jest": "^27.5.1",
    "eslint": ">=7.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.38.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.25.0",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.1.5",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
